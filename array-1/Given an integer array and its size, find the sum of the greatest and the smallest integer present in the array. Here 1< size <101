#include<iostream>
using namespace std;
int main(){
    int shaun[]={-1,3,22,34,54,23,21,5};
    int size = sizeof(shaun)/sizeof(shaun[0]);
    int max=shaun[1];
    int min=shaun[1];
    for(int i=1;i<size;i++){
        if(shaun[i]>max){
            max=shaun[i];
        }
    }
    //cout<<"Greatest no is "<<max<<endl;
    for(int j=1;j<size;j++){
        if(shaun[j]<min){
            min=shaun[j];
        }
    }
    //cout<<"Smallest no is "<<min<<endl;
    
    int sum = max + min;
    cout<<"Sum of greatest and smallest no is "<<sum<<endl;
    return 0;
}
